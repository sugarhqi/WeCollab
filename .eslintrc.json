{
    "env": {
        "commonjs": true,
        "es2021": true,
        "node": true,
        "jest/globals": true
    },
    "extends": [
        "standard"
    ],
    "plugins": ["jest"],
    "parserOptions": {
        "ecmaVersion": 12
    },
    "rules": {
        "indent": ["error", 4],
        "semi": ["error", "always"],
        "prefer-const": ["off", "always"],
        "space-before-function-paren": ["error", {
            "anonymous": "never",
            "named": "never",
            "asyncArrow": "always"
        }],
        "quote-props": ["off", "always"],
        "dot-notation": ["off", "always"],
        "no-var": "error"
    }
}
